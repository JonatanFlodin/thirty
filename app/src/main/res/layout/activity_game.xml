<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageButton
        android:id="@+id/dice1"
        android:onClick="saveDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/white1" />

    <ImageButton
        android:id="@+id/dice2"
        android:onClick="saveDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dice1"
        android:layout_alignBottom="@+id/dice1"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/dice1"
        android:layout_toRightOf="@+id/dice1"
        android:src="@drawable/white2" />

    <ImageButton
        android:id="@+id/dice3"
        android:onClick="saveDice"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dice2"
        android:layout_alignBottom="@+id/dice2"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/dice2"
        android:layout_toRightOf="@+id/dice2"
        android:src="@drawable/white3" />

    <ImageButton
        android:id="@+id/dice4"
        android:onClick="saveDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dice1"
        android:layout_alignStart="@+id/dice1"
        android:layout_alignLeft="@+id/dice1"
        android:layout_alignEnd="@+id/dice1"
        android:layout_alignRight="@+id/dice1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/white4" />

    <ImageButton
        android:id="@+id/dice5"
        android:onClick="saveDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dice2"
        android:layout_alignStart="@+id/dice2"
        android:layout_alignLeft="@+id/dice2"
        android:layout_alignEnd="@+id/dice2"
        android:layout_alignRight="@+id/dice2"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/white5" />

    <ImageButton
        android:id="@+id/dice6"
        android:onClick="saveDice"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dice3"
        android:layout_alignStart="@+id/dice3"
        android:layout_alignLeft="@+id/dice3"
        android:layout_alignEnd="@+id/dice3"
        android:layout_alignRight="@+id/dice3"
        android:layout_marginStart="-8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/white6" />

    <Button
        android:id="@+id/pick_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roll_dice"
        android:layout_alignEnd="@+id/roll_dice"
        android:layout_alignRight="@+id/roll_dice"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="Pick Value"
        android:onClick="checkScore"/>

    <Button
        android:id="@+id/roll_dice"
        android:layout_width="229dp"
        android:layout_height="66dp"
        android:layout_below="@+id/dice5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:onClick="diceRoller"
        android:text="Roll dice" />

    <TextView
        android:id="@+id/rolls_left"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/roll_dice"
        android:layout_alignLeft="@+id/roll_dice"
        android:layout_alignTop="@+id/pick_value"
        android:layout_alignBottom="@+id/pick_value"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/pick_value"
        android:layout_toLeftOf="@+id/pick_value"
        android:gravity="center"
        android:text="Rolls left" />
</RelativeLayout>