<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/die1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/white1" />

    <ImageView
        android:id="@+id/die2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/die1"
        android:layout_alignBottom="@+id/die1"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/die1"
        android:layout_toRightOf="@+id/die1"
        app:srcCompat="@drawable/white2" />

    <ImageView
        android:id="@+id/die3"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/die2"
        android:layout_alignBottom="@+id/die2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/die2"
        android:layout_toRightOf="@+id/die2"
        app:srcCompat="@drawable/white3" />

    <ImageView
        android:id="@+id/die4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/die1"
        android:layout_alignStart="@+id/die1"
        android:layout_alignLeft="@+id/die1"
        android:layout_alignEnd="@+id/die1"
        android:layout_alignRight="@+id/die1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/white4" />

    <ImageView
        android:id="@+id/die5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/die2"
        android:layout_alignStart="@+id/die2"
        android:layout_alignLeft="@+id/die2"
        android:layout_alignEnd="@+id/die2"
        android:layout_alignRight="@+id/die2"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/white5" />

    <ImageView
        android:id="@+id/die6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/die3"
        android:layout_alignStart="@+id/die3"
        android:layout_alignLeft="@+id/die3"
        android:layout_alignEnd="@+id/die3"
        android:layout_alignRight="@+id/die3"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/white6" />

    <Button
        android:id="@+id/pick_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="27dp"
        android:text="Pick Value" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/pick_value"
        android:layout_alignBottom="@+id/pick_value"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/pick_value"
        android:layout_toLeftOf="@+id/pick_value" />

    <Button
        android:id="@+id/roll_dice"
        android:layout_width="229dp"
        android:layout_height="66dp"
        android:layout_above="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="25dp"
        android:text="Roll dice" />
</RelativeLayout>